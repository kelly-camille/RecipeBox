@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h2 class="text-center my-4">Tags</h2>

<hr />

<h3>Name: @Html.DisplayFor(model => model.TagName)</h3>

@if (Model.JoinEntities.Count == 0)
{
  <h3>This tag does not have any recipes</h3>
}
else 
{
  <h3>Recipes this tag contains:</h3>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Recipe.RecipeName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to Tags", "Index")</p>
<p>@Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId })</p>