@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add a tag</h2>

<h4>Add a tag to the recipe: @Html.DisplayFor(ModelExpressionProvider => ModelExpressionProvider.RecipeName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)

  @Html.Label("Select tag")
  @Html.DropDownList("TagId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back", "Index")</p>